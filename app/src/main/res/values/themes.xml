<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Repeater" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorTextSecondary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/colorAccentVariant</item>
        <item name="colorOnSecondary">@color/colorTextSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:titleTextStyle">@style/Text.TitleAppearance</item>
    </style>

    <style name="Text.CardTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">31sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Text.TitleAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.SubTitleAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.DeckInfoSubtitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="Text.DeckNewItem" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorDeckNew</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.DeckReviewItem" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorDeckReview</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.DeckLearningItem" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorDeckLearning</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonPositive" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/customContainedButtonTheme</item>
        <item name="background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:height">64dp</item>
    </style>

    <style name="customContainedButtonTheme">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="myCustomTextForMaterialButtons">
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="BottomSheetStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="bottomSheetStyle">@style/RoundBottomSheet</item>
    </style>

    <style name="RoundBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="behavior_hideable">false</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
    </style>

</resources>